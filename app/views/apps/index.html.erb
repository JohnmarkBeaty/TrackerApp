<p id="notice"><%= notice %></p>

<h1>Listing Apps</h1>

<table class="table table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= link_to 'Show', app, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_app_path(app), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_app_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New App
<% end %>
